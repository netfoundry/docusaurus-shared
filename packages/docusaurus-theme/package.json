{
  "name": "@netfoundry/docusaurus-theme",
  "version": "0.1.5",
  "description": "NetFoundry Docusaurus theme with shared layout, footer, and styling",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist",
    "css"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn clean && tsc && yarn build:css",
    "build:css": "cp -r css dist/ && find src -name '*.css' -exec sh -c 'mkdir -p dist/$(dirname {}) && cp {} dist/{}' \\;",
    "test": "jest",
    "prepublishOnly": "yarn build && yarn test"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./dist/src/index.js"
    },
    "./ui": {
      "types": "./dist/src/ui.d.ts",
      "default": "./dist/src/ui.js"
    },
    "./plugins": {
      "types": "./dist/src/plugins.d.ts",
      "default": "./dist/src/plugins.js"
    },
    "./node": {
      "types": "./dist/src/node.d.ts",
      "default": "./dist/src/node.js"
    },
    "./css/*": "./css/*"
  },
  "peerDependencies": {
    "@docusaurus/core": "^3",
    "@docusaurus/theme-classic": "^3",
    "@docusaurus/theme-common": "^3",
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "react-device-detect": "^2.2.3",
    "react-github-btn": "^1.4.0"
  },
  "devDependencies": {
    "@docusaurus/core": "^3",
    "@docusaurus/theme-classic": "^3",
    "@docusaurus/theme-common": "^3",
    "@docusaurus/types": "^3",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "jest": "^30.0.4",
    "react": "^18",
    "react-dom": "^18",
    "typescript": "^5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/netfoundry/docusaurus-shared.git",
    "directory": "packages/docusaurus-theme"
  },
  "keywords": [
    "docusaurus",
    "docusaurus-theme",
    "netfoundry",
    "openziti"
  ],
  "license": "Apache-2.0"
}
